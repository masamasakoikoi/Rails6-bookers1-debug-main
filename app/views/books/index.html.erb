<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to book_path(book) do %>Show<% end %></td>
        <td><%= link_to edit_book_path(book) do %>Edit<% end %></td>
        <td><%= link_to book_path(book), method: :delete, data: { confirm: 'Are you sure?' } do%>Destroy<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= render 'form' %>
